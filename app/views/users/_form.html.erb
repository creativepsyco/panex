<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@user.errors.count, "error") %>prohibited this user from being saved:</h2>

  <ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li>
      <%= msg %></li>
    <% end %></ul>
</div>
<% end %>

<p>
  <%= f.label :name %></p>
<p>
  <%= f.text_field :name %></p>

<p>
  <%= f.label :email %></p>
<p>
  <%= f.text_field :email %></p>

<div class="actions">
  <%= f.submit %></div>
<% end %>